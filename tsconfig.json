{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "built",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "declaration": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*.ts",
    "typings/**/*.d.ts"
  ]
}